% logics
\newcommand{\logic}[1]{\normalrm{#1}}
\newcommand{\Gi}[1][i]{\ensuremath{\logic{G}_{#1}}}
\newcommand{\class}[1]{\ensuremath{\mathsf{#1}}}

\newcommand{\equivin}[1]{\equiv_\logic{#1}}
